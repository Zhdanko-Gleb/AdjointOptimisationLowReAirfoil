FoamFile
{
    format      ascii;
    class       dictionary;
    object      extrudeMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

constructFrom patch;

sourceCase ".";
sourcePatches (maxZ);
exposedPatchName minZ;

flipNormals false;

extrudeModel        linearNormal;



linearNormalCoeffs
{
    nLayers             1;
    expansionRatio  1;
    //thickness       1e-6;
    //thickness       0.1;
    thickness       1;
    //thickness       2;
    //thickness       10;
}

// Do front and back need to be merged? Usually only makes sense for 360
// degree wedges.
mergeFaces false;   //true;

// Merge small edges. Fraction of bounding box.
//mergeTol 0;

